<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.com.jinzhong.shandonggrain">

    <!-- if you want to load images from the internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- if you want to load images from a file OR from the internet -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_food"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_food"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".android.activity.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".android.activity.MainActivity" />
        <activity android:name=".android.activity.LoginActivity" />
        <activity android:name=".android.activity.RegisterActivity" />
        <activity android:name=".android.activity.VerifyActivity"></activity>
    </application>

</manifest>